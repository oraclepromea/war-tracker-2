{
  "name": "war-tracker-2.0",
  "version": "2.0.0",
  "description": "Real-time military conflict tracking system with AI-powered analysis",
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:functions\"",
    "start": "./start.sh",
    "dev:client": "cd client && npm run dev",
    "dev:functions": "npx supabase functions serve",
    "build": "cd client && npm run build",
    "install:all": "npm install && cd client && npm install",
    "setup": "./scripts/setup.sh",
    "deploy:functions": "./scripts/deploy-functions.sh",
    "test:api": "./scripts/test-api.sh",
    "logs": "npx supabase functions logs --tail",
    "fetch-rss": "node scripts/rss-fetcher.js",
    "fetch-rss:dry": "node scripts/rss-fetcher.js --dry-run",
    "fix-schemas": "node scripts/fix-supabase-schemas.js",
    "check-schemas": "node scripts/check-schemas.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.3",
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "supabase": "^1.123.4"
  }
}
